page {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  padding: 100rpx 60rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  position: relative;
}
.container .question {
    position: absolute;
    z-index: 888;
    top: 10rpx;
    right: 40rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: #007AFF;
}
.container .content {
    width: 100%;
    height: 100%;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    background-color: #C0C0C0;
    border-top-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
    border-bottom-left-radius: 12rpx;
    border-bottom-right-radius: 100rpx;
    padding: 50rpx 30rpx 20rpx;
}
.container .content .program {
      background-color: #fff;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      padding: 16rpx 24rpx 20rpx;
      border-bottom-right-radius: 100rpx;
}
.container .content .program .img {
        width: 100%;
        height: 360rpx;
        background-color: #ccc;
}
.container .content .rail {
      margin-top: 20rpx;
      background-color: #fff;
      border-radius: 6rpx;
      height: 10rpx;
}
.container .content .form {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
          -ms-flex-align: center;
              align-items: center;
}
.container .content .form > input {
        background-color: #fff;
        border-radius: 10rpx;
}
.detail {
  position: fixed;
  top: 30rpx;
  left: 10%;
  background-color: #333333;
  z-index: 999;
  width: 80%;
  height: 80%;
  color: #fff;
}
.detail > view:nth-child(2) {
    padding: 10rpx 40rpx;
}
.detail > view:nth-child(2) .title {
      font-size: 32rpx;
      line-height: 100rpx;
      text-align: center;
}
.detail > view:nth-child(2) .info {
      font-size: 28rpx;
      text-indent: 56rpx;
}

