@import '../common/index.wxss';

.van-dialog {
	top: 45% !important;
	width: 60%;
	overflow: hidden;
	font-size: 16px;
	background-color: rgba(36, 255, 114, .56);
	color: rgba(36, 255, 114, 1)
}

.van-dialog__header {
	padding-top: 25px;
	font-weight: 500;
	line-height: 24px;
	text-align: center
}

.van-dialog__header--isolated {
	padding: 25px 0
}

.van-dialog__message {
	max-height: 60vh;
	padding: 25px;
	overflow-y: auto;
	font-size: 2vh;
	line-height: 20px;
	text-align: center;
	-webkit-overflow-scrolling: touch
}

.van-dialog__message--has-title {
	padding-top: 12px;
	color: rgba(36, 255, 114, .8);
	font-size: 1.8vh;
}

.van-dialog__message--left {
	text-align: left
}

.van-dialog__message--right {
	text-align: right
}

.van-dialog__footer {
	display: -webkit-flex;
	display: flex;
}

.van-dialog__button {
	-webkit-flex: 1;
	flex: 1
}
.van-hairline--right::after, .van-hairline--top::after {
	border-color: rgba(36, 255, 114, 1);
}

.van-dialog__cancel,
.van-dialog__confirm {
	border: 0 !important;
	background-color: rgba(36, 255, 114, 0);
	font-size: 2vh;
	color: rgba(36, 255, 114, 1);
	border: 0;
}

.van-dialog-bounce-enter {
	opacity: 0;
	-webkit-transform: translate3d(-50%, -50%, 0) scale(.7);
	transform: translate3d(-50%, -50%, 0) scale(.7)
}

.van-dialog-bounce-leave-active {
	opacity: 0;
	-webkit-transform: translate3d(-50%, -50%, 0) scale(.9);
	transform: translate3d(-50%, -50%, 0) scale(.9)
}
